<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Avatar với circle border -->
    <FrameLayout
        android:id="@+id/avatarFrame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

            <!-- ✅ THAY ĐOẠN TRÊN BẰNG ĐOẠN NÀY -->
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="12dp">
    
            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_circle"
                android:scaleType="centerCrop"/>
    
            <!-- Green Dot Indicator -->
            <View
                android:id="@+id/vActiveIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bg_active_indicator"
                android:visibility="gone"/>
        </FrameLayout>
        <!-- Chữ cái đầu khi không có avatar -->
        <TextView
            android:id="@+id/tvInitial"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_initial_bg"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Tên -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/avatarFrame"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Tên người dùng"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Tin nhắn cuối -->
    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_toEndOf="@id/avatarFrame"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Chưa có câu trả lời nào!"
        android:textColor="#888888"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Thời gian -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:text="17 tháng 8"
        android:textColor="#666666"
        android:textSize="12sp" />

    <!-- Icon mũi tên sang phải -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chevron_right"
        android:tint="#444444" />

</RelativeLayout>