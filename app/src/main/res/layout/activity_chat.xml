<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/chatHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#1C1C1E"
        android:paddingHorizontal="16dp"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:tint="#FFFFFF"
            android:contentDescription="Back" />

        <ImageView
            android:id="@+id/ivFriendAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tvFriendName"
            android:layout_marginEnd="8dp"
            android:contentDescription="Avatar" />

        <TextView
            android:id="@+id/tvFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Friend Name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more"
            android:tint="#FFFFFF"
            android:contentDescription="Menu" />
    </RelativeLayout>

    <!-- Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutInput"
        android:layout_below="@id/chatHeader"
        android:padding="12dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Input Section -->
    <RelativeLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1C1C1E"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:elevation="8dp">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btnSend"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_input_message"
            android:hint="Gửi tin nhắn..."
            android:textColorHint="#666666"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:minHeight="44dp"
            android:maxLines="4"
            android:inputType="textCapSentences|textMultiLine"
            android:imeOptions="actionSend"
            android:gravity="start|center_vertical" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_send_button"
            android:src="@drawable/ic_send"
            android:tint="#FFFFFF"
            android:contentDescription="Send" />
    </RelativeLayout>

</RelativeLayout>